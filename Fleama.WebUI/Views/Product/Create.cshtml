@model Product
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-plus me-2"></i> Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="ProductCode" class="form-label"></label>
            <input asp-for="ProductCode" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="OrderNo" class="form-label"></label>
            <input asp-for="OrderNo" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IsHome" class="form-label d-block">Anasayfada Gösterilsin mi?</label>
            <input asp-for="IsHome" class="form-check-input" type="checkbox" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Marka</label>
            <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId"></select>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Ürün Görselleri</label>
            <input type="file" name="images" class="form-control" multiple onchange="previewImages(event)" />
            <div id="imagePreviewContainer" class="mt-2 d-flex flex-wrap gap-2"></div>
        </div>

    </div>

    <button type="submit" class="btn btn-outline-success">
        <i class="fas fa-save me-1"></i> Kaydet
    </button>
</form>

@section Scripts {
    <script>

        function previewImages(event) {
            const input = event.target;
            const container = document.getElementById("imagePreviewContainer");
            container.innerHTML = "";

            if (input.files) {
                Array.from(input.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement("img");
                        img.src = e.target.result;
                        img.style.maxHeight = "120px";
                        img.style.border = "1px solid #ccc";
                        img.style.padding = "2px";
                        container.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }
    </script>
}