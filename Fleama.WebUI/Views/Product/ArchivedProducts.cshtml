@model List<Product>
@{
    ViewData["Title"] = "Arşivlenmiş Ürünler";
}

<h2 class="mb-4"><i class="fas fa-archive me-2"></i> Arşivlenmiş Ürünler</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Arşivlenmiş ürününüz bulunmamaktadır.
    </div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (product.Images?.FirstOrDefault() != null)
                    {
                        <img src="@product.Images.First().Url" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                            }
                        </p>
                        <div class="mb-2">
                            <span class="badge bg-secondary"><i class="fas fa-archive me-1"></i> Arşivlendi</span>
                        </div>
                        @if (product.Price.HasValue)
                        {
                            <p class="card-text"><strong>Fiyat: </strong>@product.Price.Value.ToString("C")</p>
                        }
                        <p class="card-text"><small class="text-muted">Eklenme: @product.CreatedDate.ToString("dd.MM.yyyy")</small></p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye me-1"></i> Detay
                        </a>
                        <form asp-action="Unarchive" asp-route-id="@product.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Bu ürünü arşivden çıkarmak istediğinize emin misiniz?');">
                                <i class="fas fa-undo me-1"></i> Arşivden Çıkar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-3">
    <a asp-action="MyProducts" class="btn btn-primary">
        <i class="fas fa-arrow-left me-1"></i> Ürünlerime Dön
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-home me-1"></i> Ana Sayfa
    </a>
</div>
