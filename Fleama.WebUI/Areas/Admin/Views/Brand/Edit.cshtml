@model Brand

@{
    ViewData["Title"] = "Marka Düzenle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-edit me-2"></i> Marka Düzenle</h2>

<div class="card shadow-sm border-pink rounded-3 p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Marka Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-check form-switch mb-3">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsActive">Aktif</label>
        </div>

        <button type="submit" class="btn btn-outline-pink">
            <i class="fas fa-save"></i> Güncelle
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </form>
</div>
