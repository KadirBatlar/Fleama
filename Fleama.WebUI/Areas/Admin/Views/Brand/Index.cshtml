@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Markalar";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-tags me-2"></i> Markalar</h2>

<a asp-action="Create" class="btn btn-outline-dark mb-3">
    <i class="fas fa-plus"></i> Yeni Ekle
</a>

<table class="table table-hover table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Adı</th>
            <th>Aktif mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    @if (brand.IsActive)
                    {
                        <span class="badge bg-success">Evet</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Hayır</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-dark btn-sm me-1" asp-action="Edit" asp-route-id="@brand.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-outline-dark btn-sm me-1" asp-action="Detail" asp-route-id="@brand.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@brand.Id">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
