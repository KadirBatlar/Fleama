@model Brand

@{
    ViewData["Title"] = "Marka Detayları";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-eye me-2"></i> Marka Detayları</h2>

<div class="card shadow-sm border-pink rounded-3 p-4">
    <dl class="row">
        <dt class="col-sm-3">Marka Adı</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Aktif mi?</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Evet</span>
            }
            else
            {
                <span class="badge bg-danger">Hayır</span>
            }
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark me-2">
        <i class="fas fa-edit"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Geri
    </a>
</div>
