@model Brand

@{
    ViewData["Title"] = "Markayı Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2"></i> Markayı Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu marka silinecek. Emin misiniz?
</div>

<div class="card shadow-sm border-pink rounded-3 p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Marka Adı</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Aktif mi?</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Evet</span>
            }
            else
            {
                <span class="badge bg-danger">Hayır</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-outline-danger me-2">
        <i class="fas fa-trash"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Vazgeç
    </a>
</form>
