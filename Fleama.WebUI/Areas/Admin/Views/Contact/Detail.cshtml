@model Fleama.Core.Entities.Contact

@{
    ViewData["Title"] = "İletişim Formu Detayı";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-eye me-2"></i> İletişim Formu Detayı</h2>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form class="row g-3">

            <div class="col-md-6">
                <label class="form-label">Ad</label>
                <input class="form-control" value="@Model.Name" disabled />
            </div>

            <div class="col-md-6">
                <label class="form-label">Soyad</label>
                <input class="form-control" value="@Model.Surname" disabled />
            </div>

            <div class="col-md-6">
                <label class="form-label">Kullanıcı Adı</label>
                <input class="form-control" value="@Model.UserName" disabled />
            </div>

            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input class="form-control" value="@Model.Email" disabled />
            </div>

            <div class="col-md-6">
                <label class="form-label">Telefon</label>
                <input class="form-control" value="@Model.Phone" disabled />
            </div>

            <div class="col-md-12">
                <label class="form-label">Mesaj</label>
                <textarea class="form-control" rows="5" disabled>@Model.Message</textarea>
            </div>

            <div class="col-md-3">
                <label class="form-label">Durum</label>
                <input class="form-control" value="@(Model.IsActive ? "Aktif" : "Pasif")" disabled />
            </div>

            <div class="col-md-4">
                <label class="form-label">Gönderim Tarihi</label>
                <input class="form-control" value="@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")" disabled />
            </div>

            <div class="col-12 mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-2"
                   onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                    <i class="fas fa-trash-alt"></i> Sil
                </a>
            </div>
        </form>
    </div>
</div>
