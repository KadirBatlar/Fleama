@model Fleama.Core.Entities.Contact

@{
    ViewData["Title"] = "İletişim Kaydı Düzenle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-edit me-2"></i> İletişim Kaydı Düzenle</h2>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form asp-action="Edit" method="post" class="row g-3">

            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Surname" class="form-label">Soyad</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Message" class="form-label">Mesaj</label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="IsActive" class="form-label">Aktif mi?</label>
                <select asp-for="IsActive" class="form-select">
                    <option value="true">Evet</option>
                    <option value="false">Hayır</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="CreatedDate" class="form-label">Oluşturulma Tarihi</label>
                <input asp-for="CreatedDate" class="form-control" type="datetime" readonly />
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-outline-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
