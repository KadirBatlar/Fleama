@model IEnumerable<Fleama.Core.Entities.Contact>

@{
    ViewData["Title"] = "İletişim Formları";
    Layout = "_LayoutAdmin";
}

<h2 class="mb-4"><i class="fas fa-envelope me-2"></i> İletişim Formları</h2>

<a asp-action="Create" class="btn btn-outline-primary mb-3">
    <i class="fas fa-plus"></i> Yeni Ekle
</a>

<table class="table table-hover table-bordered text-center align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Mesaj</th>
            <th>Aktif</th>
            <th>Tarih</th>
            <th style="width: 180px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td class="text-start">@item.Message</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Evet</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hayır</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-dark me-1" asp-action="Edit" asp-route-id="@item.Id" title="Düzenle">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-sm btn-outline-dark me-1" asp-action="Details" asp-route-id="@item.Id" title="Detay">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" title="Sil">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-muted">Henüz iletişim formu gönderilmemiş.</td>
            </tr>
        }
    </tbody>
</table>
