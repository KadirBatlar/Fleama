@model Fleama.Core.Entities.Product
@{
    ViewData["Title"] = "Ürünü Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2"></i> Ürünü Sil</h2>

<div class="alert alert-warning">
    <strong>@Model.Name</strong> adlı ürünü silmek üzeresiniz. Bu işlem geri alınamaz. Emin misiniz?
</div>

<div class="mb-3">
    <label class="form-label">Ürün Adı</label>
    <p class="form-control-plaintext">@Model.Name</p>
</div>

<div class="mb-3">
    <label class="form-label">Kategori</label>
    <p class="form-control-plaintext">@Model.Category?.Name</p>
</div>

<div class="mb-3">
    <label class="form-label">Marka</label>
    <p class="form-control-plaintext">@Model.Brand?.Name</p>
</div>

@if (!string.IsNullOrEmpty(Model.Image))
{
    <div class="mb-3">
        <label class="form-label">Görsel</label><br />
        <img src="@Model.Image" alt="Ürün Görseli" style="max-height: 200px;" />
    </div>
}

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Vazgeç
    </a>
</form>
