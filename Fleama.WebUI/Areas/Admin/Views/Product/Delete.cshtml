@model Product
@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2"></i> Ürün Sil</h2>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary me-1">
        <i class="fas fa-arrow-left me-1"></i> Geri Dön
    </a>
</div>

<div class="card shadow-sm mt-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p><strong>Ürün Kodu:</strong> @Model.ProductCode</p>
        <p><strong>Kategori:</strong> @Model.Category?.Name</p>
        <p><strong>Marka:</strong> @Model.Brand?.Name</p>
        <p><strong>Sıra No:</strong> @Model.OrderNo</p>
        <p><strong>Anasayfada Göster:</strong> @(Model.IsHome ? "Evet" : "Hayır")</p>
        <p><strong>Açıklama:</strong> @Model.Description</p>

        <h6>Görseller</h6>
        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="d-flex flex-wrap gap-2">
                @foreach (var img in Model.Images)
                {
                    <img src="@img.Url" class="img-thumbnail" style="max-height: 120px;" />
                }
            </div>
        }
        else
        {
            <p class="text-muted">Yüklü görsel yok.</p>
        }

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt me-1"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i> Geri Dön
            </a>
        </form>
    </div>
</div>