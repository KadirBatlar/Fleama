@model Fleama.Core.Entities.Product
@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-info-circle me-2"></i> Ürün Detayları</h2>

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="form-label">Ürün Adı</label>
        <p class="form-control-plaintext">@Model.Name</p>
    </div>

    <div class="col-md-6 mb-3">
        <label class="form-label">Ürün Kodu</label>
        <p class="form-control-plaintext">@Model.ProductCode</p>
    </div>

    <div class="col-md-12 mb-3">
        <label class="form-label">Açıklama</label>
        <p class="form-control-plaintext">@Model.Description</p>
    </div>

    <div class="col-md-6 mb-3">
        <label class="form-label">Kategori</label>
        <p class="form-control-plaintext">@Model.Category?.Name</p>
    </div>

    <div class="col-md-6 mb-3">
        <label class="form-label">Marka</label>
        <p class="form-control-plaintext">@Model.Brand?.Name</p>
    </div>

    <div class="col-md-6 mb-3">
        <label class="form-label">Sıra No</label>
        <p class="form-control-plaintext">@Model.OrderNo</p>
    </div>

    <div class="col-md-6 mb-3">
        <label class="form-label">Anasayfada Gösterilsin mi?</label>
        <p class="form-control-plaintext">@((Model.IsHome) ? "Evet" : "Hayır")</p>
    </div>

    <div class="col-md-12 mb-3">
        <label class="form-label">Ürün Görseli</label><br />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="@Model.Image" alt="Ürün Görseli" style="max-height: 200px;" />
        }
        else
        {
            <p class="text-muted">Görsel yok</p>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary mt-3">
    <i class="fas fa-arrow-left"></i> Geri Dön
</a>
