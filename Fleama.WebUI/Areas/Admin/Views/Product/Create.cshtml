@model Fleama.Core.Entities.Product
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-plus me-2"></i> Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="ProductCode" class="form-label"></label>
            <input asp-for="ProductCode" class="form-control" />
        </div>

        <div class="col-md-12 mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="OrderNo" class="form-label"></label>
            <input asp-for="OrderNo" class="form-control" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IsHome" class="form-label d-block">Anasayfada Gösterilsin mi?</label>
            <input asp-for="IsHome" class="form-check-input" type="checkbox" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Marka</label>
            <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId"></select>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Ürün Görseli</label>
            <input type="file" name="image" class="form-control" onchange="previewImage(event)" />
            <div class="mt-2">
                <img id="imagePreview" src="#" alt="Önizleme" style="max-height: 120px; display: none;" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-success">
        <i class="fas fa-save"></i> Kaydet
    </button>
</form>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            const reader = new FileReader();

            reader.onload = function () {
                const img = document.getElementById("imagePreview");
                img.src = reader.result;
                img.style.display = "block";
            };

            if (input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
