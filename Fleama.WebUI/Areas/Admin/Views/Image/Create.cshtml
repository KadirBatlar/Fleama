@model Image
@{
    ViewData["Title"] = "Yeni Resim Ekle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-plus me-2"></i> Yeni Resim Ekle</h2>

<form asp-action="Create" enctype="multipart/form-data" class="mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <label asp-for="Url" class="form-label">Resim URL</label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ImageType" class="form-label">Tip</label>
            <select asp-for="ImageType" class="form-select">
                <option value="">-- Seçiniz --</option>
                <option value="1">Ürün</option>
                <option value="2">Kategori</option>
            </select>
            <span asp-validation-for="ImageType" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ReferenceId" class="form-label">Referans ID</label>
            <input asp-for="ReferenceId" class="form-control" />
            <span asp-validation-for="ReferenceId" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">
        <i class="fas fa-save"></i> Kaydet
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}