@model Fleama.Core.Entities.AppUser

@{
    ViewData["Title"] = "Yeni Kullanıcı";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-user-plus me-2"></i> Yeni Kullanıcı</h2>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form asp-action="Create" class="row g-3">

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Surname" class="form-label">Soyad</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Şifre</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label d-block">Yönetici mi?</label>
                <div class="form-check">
                    <input asp-for="IsAdmin" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsAdmin">Evet</label>
                </div>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
