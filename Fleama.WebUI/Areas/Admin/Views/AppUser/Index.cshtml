@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "_LayoutAdmin"; 
}
<h2><i class="fas fa-users me-2"></i> Kullanıcılar</h2>

<a asp-action="Create" class="btn btn-outline-dark mb-3">
    <i class="fas fa-plus"></i> Yeni Ekle
</a>

<table class="table table-hover table-bordered text-center align-middle">
    <thead class="table-light">
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Yönetici mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>
                    @if (item.IsAdmin)
                    {
                        <span class="badge bg-success">Evet</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Hayır</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-dark btn-sm me-1" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-outline-dark btn-sm me-1" asp-action="Detail" asp-route-id="@item.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="fas fa-trash-alt"></i>

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>