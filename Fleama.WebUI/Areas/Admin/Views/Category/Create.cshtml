@model Fleama.Core.Entities.Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-plus me-2"></i> Yeni Kategori Ekle</h2>

<form asp-action="Create" enctype="multipart/form-data" class="mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="OrderNo" class="form-label">Sıra No</label>
            <input asp-for="OrderNo" class="form-control" />
            <span asp-validation-for="OrderNo" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="IsTopMenu" class="form-label">Üst Menüde Göster</label>
            <div class="form-check">
                <input asp-for="IsTopMenu" class="form-check-input" />
                <label class="form-check-label" for="IsTopMenu">Evet</label>
            </div>
        </div>
        <div class="col-md-4">
            <label for="image" class="form-label">Kategori Görseli</label>
            <input type="file" name="image" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ParentId" class="form-label">Üst Kategori</label>
        <select asp-for="ParentId" asp-items="ViewBag.Kategoriler" class="form-select">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">
        <i class="fas fa-save"></i> Kaydet
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
