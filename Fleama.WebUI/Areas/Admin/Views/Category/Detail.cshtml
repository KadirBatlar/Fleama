@model Fleama.Core.Entities.Category

@{
    ViewData["Title"] = "Kategori Detayı";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-eye me-2"></i> Kategori Detayı</h2>

<div class="card mt-4 shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Sıra No</dt>
            <dd class="col-sm-9">@Model.OrderNo</dd>

            <dt class="col-sm-3">Üst Menüde Göster</dt>
            <dd class="col-sm-9">
                @if (Model.IsTopMenu)
                {
                    <span class="badge bg-success">Evet</span>
                }
                else
                {
                    <span class="badge bg-danger">Hayır</span>
                }
            </dd>

            <dt class="col-sm-3">Üst Kategori</dt>
            <dd class="col-sm-9">
                @ViewBag.ParentName
            </dd>

            <dt class="col-sm-3">Görsel</dt>
            <dd class="col-sm-9">
                @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image.Url))
                {
                    <img src="~/@Model.Image.Url" width="80" height="80" style="object-fit:cover; border-radius: 8px;" />
                }
                else
                {
                    <span class="text-muted">Yok</span>
                }

            </dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
            <i class="fas fa-edit"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>
