@model Category
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-edit me-2"></i> Kategori Düzenle</h2>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="OrderNo" class="form-label">Sıra No</label>
                <input asp-for="OrderNo" class="form-control" />
                <span asp-validation-for="OrderNo" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="IsTopMenu" class="form-label d-block">Üst Menüde Göster</label>
                <div class="form-check mt-1">
                    <input asp-for="IsTopMenu" class="form-check-input" />
                    <label class="form-check-label" for="IsTopMenu">Evet</label>
                </div>
            </div>

            <div class="col-md-12">
                <label asp-for="ParentId" class="form-label">Üst Kategori</label>
                <select asp-for="ParentId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">-- Seçiniz --</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Mevcut Görsel</label><br />
                @if (Model.Image != null)
                {                    
                    <div class="mb-2">
                        <img src="@Model.Image.Url" class="img-thumbnail" style="max-height: 120px;" />
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="removeImg" name="removeImg" value="true" />
                            <label class="form-check-label">Bu görseli kaldır</label>
                        </div>
                    </div>                    
                }
                else
                {
                    <p class="text-muted">Yüklü görsel yok.</p>
                }
            </div>

            <div class="col-md-6">
                <label class="form-label">Yeni Görsel Yükle</label>
                <input type="file" name="image" class="form-control" onchange="previewImages(event)" />
                <div id="imagePreviewContainer" class="mt-2 d-flex flex-wrap gap-2"></div>
            </div>

            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        function previewImages(event) {
            const input = event.target;
            const container = document.getElementById("imagePreviewContainer");
            container.innerHTML = "";

            if (input.files) {
                Array.from(input.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.createElement("img");
                        img.src = e.target.result;
                        img.style.maxHeight = "120px";
                        img.style.border = "1px solid #ccc";
                        img.style.padding = "2px";
                        container.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }
    </script>
}