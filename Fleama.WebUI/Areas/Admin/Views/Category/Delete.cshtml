@model Category
@{
    ViewData["Title"] = "Kategori Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2"></i> Kategori Sil</h2>

<div class="alert alert-warning mt-4">
    <strong>Uyarı:</strong> Bu kategori kalıcı olarak silinecektir. Devam etmek istediğinize emin misiniz?
</div>

<div class="card mt-3 shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Sıra No</dt>
            <dd class="col-sm-9">@Model.OrderNo</dd>

            <dt class="col-sm-3">Üst Menüde Göster</dt>
            <dd class="col-sm-9">
                @if (Model.IsTopMenu)
                {
                    <span class="badge bg-success">Evet</span>
                }
                else
                {
                    <span class="badge bg-danger">Hayır</span>
                }
            </dd>

            <dt class="col-sm-3">Üst Kategori</dt>
            <dd class="col-sm-9">@ViewBag.ParentName</dd>

            <dt class="col-sm-3">Görsel</dt>
            <dd class="col-sm-9">
                @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image.Url))
                {
                    <img src="@Model.Image.Url" width="80" height="80" style="object-fit:cover; border-radius: 8px;" />
                }
                else
                {
                    <span class="text-muted">Yok</span>
                }
            </dd>
        </dl>

        <form asp-action="DeleteConfirm" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </form>
    </div>
</div>
