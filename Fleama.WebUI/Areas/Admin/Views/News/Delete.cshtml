@model Fleama.Core.Entities.News

@{
    ViewData["Title"] = "Haberi Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2 text-danger"></i> Haberi Sil</h2>

<div class="alert alert-warning mt-4" role="alert">
    <strong>Dikkat!</strong> Bu haber/duyuru kalıcı olarak silinecektir. Devam etmek istediğinize emin misiniz?
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body row">
        <div class="col-md-4 text-center">
            @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image.Url))
            {
                <img src="@Model.Image.Url" width="80" height="80" style="object-fit:cover; border-radius: 8px;" />
            }
            else
            {
                <span class="text-muted">Görsel Yok</span>
            }
        </div>
        <div class="col-md-8">
            <h4 class="mb-3 text-primary">@Model.Name</h4>
            <p>@Model.Description</p>
        </div>
    </div>
</div>

<form asp-action="DeleteConfirm" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Evet, Sil
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</form>
