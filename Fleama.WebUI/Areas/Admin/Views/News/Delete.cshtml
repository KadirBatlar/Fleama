@model Fleama.Core.Entities.News

@{
    ViewData["Title"] = "Haberi Sil";
    Layout = "_LayoutAdmin";
}

<h2><i class="fas fa-trash-alt me-2 text-danger"></i> Haberi Sil</h2>

<div class="alert alert-warning mt-4" role="alert">
    <strong>Dikkat!</strong> Bu haber/duyuru kalıcı olarak silinecektir. Devam etmek istediğinize emin misiniz?
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body row">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Url.Content("~/Img/News/" + Model.Image)"
                     class="img-fluid rounded"
                     alt="@Model.Name"
                     style="max-height: 200px; object-fit: cover;" />
            }
            else
            {
                <div class="text-muted small fst-italic">Görsel Yok</div>
            }
        </div>
        <div class="col-md-8">
            <h4 class="mb-3 text-primary">@Model.Name</h4>
            <p>@Model.Description</p>
        </div>
    </div>
</div>

<!-- 🔧 DÜZELTİLMİŞ FORM -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Evet
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Vazgeç
    </a>
</form>
